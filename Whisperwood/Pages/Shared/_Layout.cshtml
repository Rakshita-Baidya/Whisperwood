<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whisperwood</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1a202c',
                        secondary: '#2d3748',
                    },
                },
            },
        };
    </script>
</head>
<body class="bg-gray-100">
    <header class="bg-primary p-4 text-white">
        <nav class="container mx-auto flex items-center justify-between">
            <h1 class="text-2xl font-bold">Whisperwood</h1>
            <div class="flex items-center space-x-4">
                <a href="/" class="hover:text-gray-300">Home</a>
                <a href="/Categories" class="hover:text-gray-300">Categories</a>
                <a href="/Genres" class="hover:text-gray-300">Genres</a>
                <a href="/Login" class="hover:text-gray-300">Login</a>
            </div>
        </nav>
    </header>
    <main class="container mx-auto p-4">
        @RenderBody()
    </main>
    <footer class="bg-secondary p-4 text-center text-white">
        <p>&copy; @DateTime.Now.Year Whisperwood</p>
    </footer>
</body>
</html>